<html>
    <head>
        <link rel="stylesheet" href="https://bootswatch.com/4/solar/bootstrap.min.css" />
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        <title>Liste des candidats</title>
    </head>
    <body>
        <div class="container mt-3">
            <table class="table table-danger">
                <thead>
                <th colspan="4" class="text-center">Liste des candidats</th>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>date de création</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>   
                    {% for user in listUser %}
                        <tr>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.fistname }}</td>
                            <td>{{ user.createDate|date('d/m/Y') }}</td>
                            <td> <a href="{{path('show_candidate_Id', {'id' :user.id} )}}" class="btn btn-secondary" role="button" aria-pressed="true">+ d'infos</a> </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table> 
            <a href="ajoutcandidat" class="btn btn-primary" role="button" aria-pressed="true">Ajouter un candidat</a>
        </div>
    </body>
</html>